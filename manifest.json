{
    "manifest_version": 3,
    "name": "Editor de Imágenes de Producto",
    "version": "1.0",
    "description": "Captura y formatea imágenes para producto (añade logo y marco) rápidamente desde el panel lateral.",
    "permissions": [
      "contextMenus",  
      "sidePanel",     
      "storage",       
      "downloads"      
    ],
    "host_permissions": [
      "<all_urls>" 
    ],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "side_panel": {
      "default_path": "sidepanel/sidepanel.html"
    },
    "action": {
      "default_title": "Abrir Editor de Imágenes",
      "default_icon": "icons/icon48.png"
    }
  }